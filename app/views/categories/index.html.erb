<table id="categories_table" data-purpose="category_list">
 <tr>
	 <th>Name</th>
	 <th>Description</th>
	 <th>Number of articles</th>
 </tr>
<% @categories.each do |category| %>
 <tr>
	 <td> <%= link_to category.name, category, html:{ class: 'cat_link' } %> </td>
	 <td> <%= category.description %> </td>
	 <td></td>
 </tr>

<% end %>
</table>
<h2>Add a category</h2>
<%= form_for @category do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_field :description %>

<% end %>