<table id="categories_table">
 <tr>
	 <th>Name</th>
	 <th>Description</th>
	 <th>Number of articles</th>
 </tr>
<% @categories.each do |category| %>
 <tr>
	 <td> <%= link_to category.name, category, html:{ class: 'cat_link' } %> </td>
	 <td> <%= category.description %> </td>
	 <td></td>
 </tr>

<% end %>
</table>